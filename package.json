{
  "name": "al-rafiah-dessert",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "description": "Raf'iyah desert driving experience with Phaser and upcoming sand dunes rebuild.",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.json && vite build",
    "test": "vitest run || jest --runInBand",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test || echo 'e2e skipped'",
    "lint": "eslint \"{game,levels,src}/**/*.{js,ts,tsx}\"",
    "analyze": "node tools/audit_baseline.mjs",
    "deploy": "vite build",
    "release": "npm run test && npm run build && npm run deploy",
    "push:pages": "echo \"Configure deploy script once hosting target is chosen\" && exit 0"
  },
  "dependencies": {
    "phaser": "^3.70.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^20.11.0",
    "eslint": "^8.52.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  }
}
